#!/bin/bash

# Runs `git pull` on every git repo in subdirectories of the current directory.

set -euo pipefail

for git_dir in ./*/.git; do
    [[ -d "${git_dir}" ]] || continue
    repo_dir="${git_dir%/.git}"
    printf "\n==> %s\n" "${repo_dir#./}"
    (cd "${repo_dir}" && git pull --ff-only)
done
